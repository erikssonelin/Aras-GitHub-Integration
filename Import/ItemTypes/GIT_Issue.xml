<?xml version="1.0" encoding="UTF-8"?>
<AML version="15.0 SP2">
  <Item type="ItemType" action="add">
    <id>GIT_Issue</id>
    <name>GIT_Issue</name>
    <label>GitHub Issue</label>
    <label_plural>GitHub Issues</label_plural>
    <implementation_type>table</implementation_type>
    <is_relationship>0</is_relationship>
    <is_versionable>0</is_versionable>

    <Relationships>
      <!-- GitHub Issue Number -->
      <Item type="Property" action="add">
        <name>issue_number</name>
        <label>Issue #</label>
        <data_type>integer</data_type>
        <is_indexed>1</is_indexed>
        <keyed_name_order>1</keyed_name_order>
      </Item>

      <!-- Title -->
      <Item type="Property" action="add">
        <name>title</name>
        <label>Title</label>
        <data_type>string</data_type>
        <stored_length>256</stored_length>
        <is_required>1</is_required>
      </Item>

      <!-- Description/Body -->
      <Item type="Property" action="add">
        <name>description</name>
        <label>Description</label>
        <data_type>text</data_type>
      </Item>

      <!-- State (open/closed) -->
      <Item type="Property" action="add">
        <name>state</name>
        <label>State</label>
        <data_type>string</data_type>
        <stored_length>16</stored_length>
        <default_value>open</default_value>
      </Item>

      <!-- Labels (JSON array) -->
      <Item type="Property" action="add">
        <name>labels</name>
        <label>Labels</label>
        <data_type>text</data_type>
      </Item>

      <!-- Assignee -->
      <Item type="Property" action="add">
        <name>assignee</name>
        <label>Assignee</label>
        <data_type>string</data_type>
        <stored_length>64</stored_length>
      </Item>

      <!-- GitHub URL -->
      <Item type="Property" action="add">
        <name>html_url</name>
        <label>GitHub URL</label>
        <data_type>string</data_type>
        <stored_length>256</stored_length>
      </Item>

      <!-- Created At -->
      <Item type="Property" action="add">
        <name>created_at</name>
        <label>Created</label>
        <data_type>date</data_type>
      </Item>

      <!-- Updated At -->
      <Item type="Property" action="add">
        <name>updated_at</name>
        <label>Updated</label>
        <data_type>date</data_type>
      </Item>

      <!-- Link to Repository -->
      <Item type="Property" action="add">
        <name>source_id</name>
        <label>Repository</label>
        <data_type>item</data_type>
        <foreign_property>id</foreign_property>
        <foreign_type>GIT_Repository</foreign_type>
        <is_hidden>1</is_hidden>
        <is_required>1</is_required>
      </Item>

      <!-- Default View -->
      <Item type="View" action="add">
        <client>js</client>
        <display_priority>1</display_priority>
        <related_id keyed_name="GIT_Issue" type="Form">
          <Item type="Form" action="get">
            <name>GIT_Issue</name>
          </Item>
        </related_id>
        <role keyed_name="World" type="Identity">
          <Item type="Identity" action="get">
            <name>World</name>
          </Item>
        </role>
        <type>default</type>
      </Item>
    </Relationships>
  </Item>
</AML>
