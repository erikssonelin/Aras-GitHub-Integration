<?xml version="1.0" encoding="UTF-8"?>
<AML version="15.0 SP2">
  <Item type="ItemType" action="add">
    <id>GIT_Commit</id>
    <name>GIT_Commit</name>
    <label>GitHub Commit</label>
    <label_plural>GitHub Commits</label_plural>
    <implementation_type>table</implementation_type>
    <is_relationship>0</is_relationship>
    <is_versionable>0</is_versionable>

    <Relationships>
      <!-- Commit SHA -->
      <Item type="Property" action="add">
        <name>sha</name>
        <label>Commit SHA</label>
        <data_type>string</data_type>
        <is_indexed>1</is_indexed>
        <keyed_name_order>1</keyed_name_order>
        <stored_length>40</stored_length>
      </Item>

      <!-- Commit Message -->
      <Item type="Property" action="add">
        <name>message</name>
        <label>Commit Message</label>
        <data_type>string</data_type>
        <stored_length>512</stored_length>
      </Item>

      <!-- Author -->
      <Item type="Property" action="add">
        <name>author_name</name>
        <label>Author</label>
        <data_type>string</data_type>
        <stored_length>128</stored_length>
      </Item>

      <!-- Author Email -->
      <Item type="Property" action="add">
        <name>author_email</name>
        <label>Author Email</label>
        <data_type>string</data_type>
        <stored_length>128</stored_length>
      </Item>

      <!-- Commit Date -->
      <Item type="Property" action="add">
        <name>commit_date</name>
        <label>Commit Date</label>
        <data_type>date</data_type>
      </Item>

      <!-- GitHub URL -->
      <Item type="Property" action="add">
        <name>html_url</name>
        <label>GitHub URL</label>
        <data_type>string</data_type>
        <stored_length>256</stored_length>
      </Item>

      <!-- Parent SHAs (JSON array) -->
      <Item type="Property" action="add">
        <name>parent_shas</name>
        <label>Parent Commits</label>
        <data_type>text</data_type>
      </Item>

      <!-- Link to Repository -->
      <Item type="Property" action="add">
        <name>source_id</name>
        <label>Repository</label>
        <data_type>item</data_type>
        <foreign_property>id</foreign_property>
        <foreign_type>GIT_Repository</foreign_type>
        <is_hidden>1</is_hidden>
        <is_required>1</is_required>
      </Item>
    </Relationships>
  </Item>
</AML>
