<AML>
 <Item type="Form" action="add">
  <name>GH_Configuration</name>
  <label xml:lang="en">GitHub Configuration</label>
  <description xml:lang="en">Configure GitHub integration settings</description>
  <core>0</core>
  <body>
   <![CDATA[<form>
    <head>
      <title>GitHub Configuration</title>
      <style>
        .github-config {
          padding: 20px;
        }
        .config-field {
          margin-bottom: 15px;
        }
        label {
          display: block;
          font-weight: bold;
          margin-bottom: 5px;
        }
        input[type="text"], input[type="password"] {
          width: 100%;
          max-width: 400px;
          padding: 8px;
          box-sizing: border-box;
        }
        .help-text {
          color: #666;
          font-size: 12px;
          margin-top: 3px;
        }
      </style>
    </head>
    <body>
      <div class="github-config">
        <div class="config-field">
          <label for="github_token">GitHub Token:</label>
          <input type="password" id="github_token" aras_name="github_token" />
          <div class="help-text">
            Generate a personal access token at: https://github.com/settings/tokens
          </div>
        </div>

        <div class="config-field">
          <label for="github_user">GitHub Username/Organization:</label>
          <input type="text" id="github_user" aras_name="github_user" />
          <div class="help-text">
            Your GitHub username or organization name
          </div>
        </div>

        <div class="config-field">
          <label for="api_url">GitHub API URL:</label>
          <input type="text" id="api_url" aras_name="api_url" />
          <div class="help-text">
            Default: https://api.github.com (change for GitHub Enterprise)
          </div>
        </div>

        <div class="config-field">
          <button onclick="validateToken()" style="margin-top: 10px;">
            Validate Token
          </button>
        </div>
      </div>

      <script>
        function validateToken() {
          var token = document.getElementById('github_token').value;
          var apiUrl = document.getElementById('api_url').value || 'https://api.github.com';

          if (!token) {
            alert('Please enter a GitHub token');
            return;
          }

          var inn = top.aras.getInnovator();
          inn.applyMethod('validateGitHubToken',
            '<token>' + token + '</token><api_url>' + apiUrl + '</api_url>'
          ).then(function(result) {
            if (result.isError()) {
              alert('Token validation failed: ' + result.getErrorString());
            } else {
              alert('Token is valid: ' + result.getResult());
            }
          });
        }
      </script>
    </body>
   </form>]]>
  </body>
 </Item>
</AML>
